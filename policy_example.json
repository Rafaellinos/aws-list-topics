{
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "SNS:ListTopics"
      ],
      "Resource": [
        "*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "SNS:GetTopicAttributes",
        "SNS:SetTopicAttributes",
        "SNS:AddPermission",
        "SNS:RemovePermission",
        "SNS:DeleteTopic",
        "SNS:Subscribe",
        "SNS:ListSubscriptionsByTopic",
        "SNS:Publish"
      ],
      "Resource": [
        "arn:aws:sns:us-east-1:<ACCOUNT-ID>:<TOPIC-NAME>"
      ]
    }
  ]
}